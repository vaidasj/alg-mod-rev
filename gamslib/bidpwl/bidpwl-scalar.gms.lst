 158  Positive Variable BidPwlSeg(v,s);
 159  Binary Variable BidPwlBin(v,s);
 160  Equation defBidPwlSeg(v,s), defBidPwlOne(v);
 161  defBidPwlSeg(BidPwl_Seg(v,s))$(abs(BidPwl(v,s,'l'))<>inf )..
 162    BidPwlSeg(v,s) =l= abs(BidPwl(v,s,'l'))*BidPwlBin(v,s);
 163  defBidPwlOne(v).. sum(BidPwl_Seg(v,s), BidPwlBin(v,s)) =e= 1;
 164  Equation defBidPwlinf1(v,s), defBidPwlinf2(v,s);
 165  SOS1 Variable BidPwlSOS1(v,s,PwlSeg__);
 166  defBidPwlinf1(BidPwl_Seg(v,s))$(abs(BidPwl(v,s,'l'))=inf )..
 167    1-BidPwlBin(v,s) =e= BidPwlSOS1(v,s,'pwls1__');
 168  defBidPwlinf2(BidPwl_Seg(v,s))$(abs(BidPwl(v,s,'l'))=inf )..
 169      BidPwlSeg(v,s) =e= BidPwlSOS1(v,s,'pwls2__');
