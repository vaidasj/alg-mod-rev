 146    smin(BidPwl_Seg(v,s)$(BidPwl(v,s,'l')=0 and abs(arg-BidPwl(v,s,'x'))<1e-6 and &\
 147                                           arg-1e-6<=BidPwl(v,s,'x')+BidPwl(v,s,'l')  \
