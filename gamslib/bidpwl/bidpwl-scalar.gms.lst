 149                                           arg-1e-6<=BidPwl(v,s,'x')+BidPwl(v,s,'l')  \
 150                  or BidPwl(v,s,'l')<+1e-6 and arg-1e-6<=BidPwl(v,s,'x') and &\
 151                                           arg+1e-6>=BidPwl(v,s,'x')+BidPwl(v,s,'l')),\
